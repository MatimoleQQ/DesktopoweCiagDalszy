<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Right" FontSize="30" Margin="40">Podaj liczbe a</TextBlock>
        <TextBox x:Name="tbox1" Margin="30" Grid.Row="0" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Right" Grid.Row="1" FontSize="30" Margin="40">Podaj liczbe b</TextBlock>
        <TextBox x:Name="tbox2" Margin="30" Grid.Row="1" Grid.Column="1"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Margin="50" Click="Button_Click">Wcisnij  aby obliczyc NWD</Button>
    </Grid>
</Window>
